<%- include ("./layout/header") %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<%- include ("./layout/menu") %>

<main class="sec">
  <form class="sec-cont register bg-white p-2 px-5 rounded-3 my-4">
    <h2 class="mt-5 fw-semibold">Registrera dig!</h2>

    <div class="w-75 mb-4 mt-5">
      <label for="registerName" class="form-label fw-semibold w-100">För-och efternamn</label>
      <input type="text" class="form-control" id="registerName" placeholder="namn och efternamn">
    </div>

    <div class="w-75 mb-4">
      <label for="registerMail" class="form-label fw-semibold w-100">Mejl adress</label>
      <input type="email" class="form-control" id="registerMail" placeholder="name@example.com">
    </div>

    <div class="w-75 mb-4">
      <label for="registerConfirmMail" class="form-label fw-semibold w-100">Bekräfta mejl</label>
      <input type="email" class="form-control" id="registerConfirmMail" placeholder="name@example.com">
    </div>

    <div class="w-75 mb-4">
      <label for="registerPassword" class="col-sm-2 col-form-label fw-semibold w-100">Lösenord</label>
      <input type="password" class="form-control" id="registerPassword" placeholder="*********">
    </div>

    <div class="w-75 mb-4">
      <label for="registerConfirmPassword" class="col-sm-2 col-form-label fw-semibold w-100">Bekräfta Lösenord</label>
      <input type="password" class="form-control" id="registerConfirmPassword" placeholder="*********">
    </div>

    <button type="submit" class="btn btn-danger mt-4 py-2 w-25 fw-semibold" id="registerBtn">Skicka</button>
    <p class="mt-4 mb-5" style="font-size: .9rem;">
      Har du redan ett konto?
      <a href="/login" class="text-danger text-decoration-underline">Logga in!</a>
    </p>
  </form> 
</main>

<script src="/static/js/validation.js"></script>
<%- include ("./layout/footer") %>
</body>
</html>